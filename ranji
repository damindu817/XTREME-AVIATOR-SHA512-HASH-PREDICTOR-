    // Initialize on load
    document.addEventListener('DOMContentLoaded', function() {
      // Check if language is already selected
      const savedLanguage = localStorage.getItem('selectedLanguage');
      if (savedLanguage) {
        currentLanguage = savedLanguage;
        selectLanguage(savedLanguage, true);
      } else {
        // Show language selection screen
        document.getElementById('languageSelection').classList.remove('hidden');
        document.getElementById('appContainer').classList.remove('visible');
      }
    });
    
    // Select language function
    function selectLanguage(language, skipAnimation = false) {
      currentLanguage = language;
      localStorage.setItem('selectedLanguage', language);
      
      // Hide language selection screen
      document.getElementById('languageSelection').classList.add('hidden');
      
      // Show app container
      document.getElementById('appContainer').classList.add('visible');
      
      // Apply translations
      applyTranslations();
      
      // Initialize app components
      loadBanks();
      loadWithdrawals();
      loadGamingPlatforms();
      loadDirectAccessPlatforms();
      loadImageSlider();
      loadNotifications();
      startSlider();
      showInitialDisclaimer();
      
      // Auto-show disclaimer on first visit
      if (!skipAnimation) {
        setTimeout(() => {
          if (!localStorage.getItem('disclaimerSeen')) {
            toggleDisclaimer();
            localStorage.setItem('disclaimerSeen', 'true');
          }
        }, 3000);
      }
    }
    
    // Show language selection screen from anywhere in the app
    function showLanguageSelection() {
      document.getElementById('languageSelection').classList.remove('hidden');
      document.getElementById('appContainer').classList.remove('visible');
    }
    
    // Apply translations to all elements
    function applyTranslations() {
      const lang = translations[currentLanguage];
      
      // Apply translations to all elements with IDs
      Object.keys(lang).forEach(key => {
        const element = document.getElementById(key);
        if (element) {
          if (key === 'step2Desc' || key === 'step3Desc' || key === 'step4Desc' || key === 'step5Desc') {
            element.innerHTML = lang[key];
          } else if (key === 'securityList') {
            // Special handling for list items
            const items = element.querySelectorAll('li');
            items.forEach((item, index) => {
              const itemKey = `security${index + 1}`;
              if (lang[itemKey]) {
                item.textContent = lang[itemKey];
              }
            });
          } else if (key === 'promo1Content' || key === 'promo2Content') {
            element.innerHTML = lang[key];
          } else {
            element.textContent = lang[key];
          }
        }
      });
    }
    
    // Tab switching function
    function switchTab(tabId, clickedElement = null) {
      // Hide all tab contents
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
      });
      
      // Show selected tab content
      document.getElementById(tabId).classList.add('active');
      
      // Update active nav item if clicked from nav
      if (clickedElement) {
        document.querySelectorAll('.nav-item').forEach(item => {
          item.classList.remove('active');
        });
        
        clickedElement.classList.add('active');
        
        // If switching to notification tab, clear notification badge
        if (tabId === 'notificationTab') {
          clearNotificationBadge();
        }
      } else {
        // If switching from button, find and activate corresponding nav item
        document.querySelectorAll('.nav-item').forEach(item => {
          item.classList.remove('active');
          
          // Determine which nav item to activate based on tab
          if (tabId === 'dashboardTab' && item.querySelector('i.fa-home')) {
            item.classList.add('active');
          } else if (tabId === 'notificationTab' && item.querySelector('i.fa-bell')) {
            item.classList.add('active');
            clearNotificationBadge();
          } else if (tabId === 'contactsTab' && item.querySelector('i.fa-address-book')) {
            item.classList.add('active');
          } else if (tabId === 'supportTab' && item.querySelector('i.fa-question-circle')) {
            item.classList.add('active');
          }
        });
      }
      
      // Scroll to top
      document.querySelector('.scroll-container').scrollTo(0, 0);
      
      // Close disclaimer if open
      document.getElementById('disclaimerPopup').classList.remove('show');
    }
    
    // Clear notification badge
    function clearNotificationBadge() {
      document.getElementById('notificationCount').textContent = '0';
      document.getElementById('navNotificationCount').style.display = 'none';
      document.getElementById('navNotificationCount').textContent = '0';
    }
    
    // Load notifications
    function loadNotifications() {
      const notificationList = document.getElementById('notificationList');
      notificationList.innerHTML = '';
      
      let newNotificationsCount = 0;
      
      notifications.forEach((notification, index) => {
        const notificationItem = document.createElement('div');
        notificationItem.className = `notification-item ${notification.type}`;
        notificationItem.innerHTML = `
          <div class="notification-header">
            <div class="notification-title">
              <i class="${notification.icon}" style="color: ${notification.iconColor};"></i>
              ${notification.title}
              ${notification.type === 'new' ? '<span class="notification-badge-new">NEW</span>' : ''}
            </div>
            <div class="notification-date">${notification.date}</div>
          </div>
          <div class="notification-content">${notification.content}</div>
        `;
        notificationList.appendChild(notificationItem);
        
        if (notification.type === 'new') {
          newNotificationsCount++;
        }
      });
      
      // Update notification counts
      document.getElementById('notificationCount').textContent = newNotificationsCount;
      document.getElementById('navNotificationCount').textContent = newNotificationsCount;
      
      if (newNotificationsCount === 0) {
        document.getElementById('navNotificationCount').style.display = 'none';
      }
    }
    
    // Load image slider
    function loadImageSlider() {
      const sliderTrack = document.getElementById('sliderTrack');
      const sliderDots = document.getElementById('sliderDots');
      
      sliderImages.forEach((image, index) => {
        // Create slide
        const slide = document.createElement('div');
        slide.className = 'slide';
        slide.style.backgroundImage = `url('${image.url}')`;
        slide.innerHTML = `<div class="slide-overlay">${image.title}</div>`;
        sliderTrack.appendChild(slide);
        
        // Create dot
        const dot = document.createElement('div');
        dot.className = 'slider-dot';
        if (index === 0) dot.classList.add('active');
        dot.dataset.index = index;
        dot.addEventListener('click', () => goToSlide(index));
        sliderDots.appendChild(dot);
      });
    }
    
    // Start slider auto-play
    function startSlider() {
      slideInterval = setInterval(nextSlide, 4000);
    }
    
    // Go to specific slide
    function goToSlide(index) {
      const sliderTrack = document.getElementById('sliderTrack');
      const dots = document.querySelectorAll('.slider-dot');
      
      currentSlide = index;
      sliderTrack.style.transform = `translateX(-${currentSlide * 100}%)`;
      
      // Update dots
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentSlide);
      });
      
      // Reset interval
      clearInterval(slideInterval);
      startSlider();
    }
    
    // Next slide
    function nextSlide() {
      const totalSlides = sliderImages.length;
      currentSlide = (currentSlide + 1) % totalSlides;
      goToSlide(currentSlide);
    }
    
    // Previous slide
    function prevSlide() {
      const totalSlides = sliderImages.length;
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      goToSlide(currentSlide);
    }
    
    // Load bank cards with special highlights and warnings - UPDATED with new highlight design
    function loadBanks() {
      const bankGrid = document.getElementById('bankGrid');
      bankGrid.innerHTML = '';
      
      banks.forEach((bank, index) => {
        const bankCard = document.createElement('div');
        bankCard.className = 'bank-card';
        
        // Check if this is BOC or People's Bank for warning
        let warningHtml = '';
        let warningText = '';
        
        if (bank.warning) {
          if (bank.name === "Bank of Ceylon") {
            warningText = translations[currentLanguage].bocWarning;
          } else if (bank.name === "People's Bank") {
            warningText = translations[currentLanguage].peoplesWarning;
          }
          
          warningHtml = `<div class="bank-warning-note">
            <i class="fas fa-exclamation-triangle"></i>
            <span>${warningText}</span>
          </div>`;
        }
        
        bankCard.innerHTML = `
          <div class="bank-header">
            <div class="bank-icon">
              <img src="${bank.logo || fallbackBankImages[index]}" alt="${bank.name}" 
                   onerror="this.src='${fallbackBankImages[index]}'">
            </div>
            <div style="flex-grow: 1;">
              <div style="font-weight: 800; color: var(--dark-1); font-size: 1.1rem; margin-bottom: 5px;">${bank.name}</div>
            </div>
          </div>
          
          <div class="bank-details">
            <!-- Account Number with special highlight -->
            <div class="account-number-row copyable" data-value="${bank.account}" data-label="${bank.name} - ${currentLanguage === 'si' ? 'ගිණුම් අංකය' : 'Account Number'}">
              <div class="account-number-label">
                <i class="fas fa-id-badge"></i> <span>${currentLanguage === 'si' ? 'ගිණුම් අංකය:' : 'Account Number:'}</span>
              </div>
              <div class="account-number-value">
                ${bank.account}
                <span class="copy-indicator"><i class="fas fa-copy"></i></span>
              </div>
            </div>
            
            <!-- Account Holder -->
            <div class="detail-row">
              <div class="detail-label">
                <i class="fas fa-user"></i> <span>${currentLanguage === 'si' ? 'ගිණුම් හිමිකරු:' : 'Account Holder:'}</span>
              </div>
              <div class="detail-value">
                <span class="copyable" data-value="${bank.holder}" data-label="${bank.name} - ${currentLanguage === 'si' ? 'ගිණුම් හිමිකරු' : 'Account Holder'}">
                  ${bank.holder}
                  <span class="copy-indicator"><i class="fas fa-copy"></i></span>
                </span>
              </div>
            </div>
            
            <!-- Branch -->
            <div class="detail-row">
              <div class="detail-label">
                <i class="fas fa-map-marker-alt"></i> <span>${currentLanguage === 'si' ? 'ශාඛාව:' : 'Branch:'}</span>
              </div>
              <div class="detail-value">
                <span class="copyable" data-value="${bank.branch}" data-label="${bank.name} - ${currentLanguage === 'si' ? 'ශාඛාව' : 'Branch'}">
                  ${bank.branch}
                  <span class="copy-indicator"><i class="fas fa-copy"></i></span>
                </span>
              </div>
            </div>
          </div>
          
          <!-- Warning note at the END of the bank card -->
          ${warningHtml}
        `;
        bankGrid.appendChild(bankCard);
      });
    }
    
    // Load withdrawal cards
    function loadWithdrawals() {
      const withdrawalGrid = document.getElementById('withdrawalGrid');
      withdrawalGrid.innerHTML = '';
      
      platforms.forEach((platform, index) => {
        const withdrawalCard = document.createElement('div');
        withdrawalCard.className = 'withdrawal-card';
        withdrawalCard.innerHTML = `
          <div class="platform-header">
            <div class="platform-icon">
              <img src="${platform.logo || fallbackPlatformImages[index % fallbackPlatformImages.length]}" alt="${platform.name}"
                   onerror="this.src='${fallbackPlatformImages[index % fallbackPlatformImages.length]}'">
            </div>
            <div style="flex-grow: 1;">
              <div style="font-weight: 800; color: var(--dark-1); font-size: 1.1rem; margin-bottom: 5px;">${platform.name}</div>
            </div>
          </div>
          <div class="withdrawal-details">
            <div class="detail-row">
              <div class="detail-label">
                <i class="fas fa-city"></i> <span>${currentLanguage === 'si' ? 'නගරය:' : 'City:'}</span>
              </div>
              <div class="detail-value">
                <span class="copyable" data-value="${platform.city}" data-label="${platform.name} - ${currentLanguage === 'si' ? 'නගරය' : 'City'}">
                  ${platform.city}
                  <span class="copy-indicator"><i class="fas fa-copy"></i></span>
                </span>
              </div>
            </div>
            <div class="detail-row">
              <div class="detail-label">
                <i class="fas fa-road"></i> <span>${currentLanguage === 'si' ? 'වීදිය:' : 'Street:'}</span>
              </div>
              <div class="detail-value">
                <span class="copyable" data-value="${platform.street}" data-label="${platform.name} - ${currentLanguage === 'si' ? 'වීදිය' : 'Street'}">
                  ${platform.street}
                  <span class="copy-indicator"><i class="fas fa-copy"></i></span>
                </span>
              </div>
            </div>
          </div>
        `;
        withdrawalGrid.appendChild(withdrawalCard);
      });
    }
    
    // Load gaming platforms with logos
    function loadGamingPlatforms() {
      const platformsGrid = document.getElementById('platformsGrid');
      platformsGrid.innerHTML = '';
      
      gamingPlatforms.forEach((platform, index) => {
        const platformCard = document.createElement('a');
        platformCard.className = 'platform-logo-card';
        platformCard.href = platform.downloadUrl;
        platformCard.target = '_blank';
        platformCard.innerHTML = `
          <div class="platform-logo">
            <img src="${platform.logo || fallbackPlatformImages[index % fallbackPlatformImages.length]}" 
                 alt="${platform.name}"
                 onerror="this.src='${fallbackPlatformImages[index % fallbackPlatformImages.length]}'">
          </div>
          <div class="platform-logo-name">${platform.name}</div>
        `;
        platformsGrid.appendChild(platformCard);
      });
    }
    
    // Load direct access platforms
    function loadDirectAccessPlatforms() {
      const directAccessGrid = document.getElementById('directAccessGrid');
      directAccessGrid.innerHTML = '';
      
      // Use all gaming platforms for direct access
      gamingPlatforms.forEach((platform, index) => {
        const accessCard = document.createElement('a');
        accessCard.className = 'direct-access-card';
        accessCard.href = platform.downloadUrl;
        accessCard.target = '_blank';
        accessCard.innerHTML = `
          <div class="direct-access-icon">
            <i class="fas fa-download"></i>
          </div>
          <div class="direct-access-name">${platform.name}</div>
          <div class="direct-access-desc">${platform.description}</div>
        `;
        directAccessGrid.appendChild(accessCard);
      });
    }
    
    // Copy to clipboard function with center toast
    function copyToClipboard(text, label) {
      navigator.clipboard.writeText(text).then(() => {
        showSuccessToast(translations[currentLanguage].toastMessage);
      }).catch(err => {
        // Fallback method
        const textarea = document.createElement('textarea');
        textarea.value = text;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
        showSuccessToast(translations[currentLanguage].toastMessage);
      });
    }
    
    // Show success toast in center
    function showSuccessToast(message) {
      const toast = document.getElementById('successToast');
      const toastMessage = document.getElementById('toastMessage');
      toastMessage.textContent = message;
      toast.classList.add('show');
      
      setTimeout(() => {
        toast.classList.remove('show');
      }, 2000);
    }
    
    // Disclaimer functions
    function toggleDisclaimer() {
      const popup = document.getElementById('disclaimerPopup');
      popup.classList.toggle('show');
    }
    
    function showInitialDisclaimer() {
      // Show briefly on first load
      setTimeout(() => {
        if (!localStorage.getItem('initialDisclaimerShown')) {
          toggleDisclaimer();
          localStorage.setItem('initialDisclaimerShown', 'true');
          
          // Auto-hide after 8 seconds
          setTimeout(() => {
            document.getElementById('disclaimerPopup').classList.remove('show');
          }, 8000);
        }
      }, 2000);
    }
    
    // Add click handlers to copyable text
    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('copyable') || e.target.closest('.copyable')) {
        const copyableElement = e.target.classList.contains('copyable') ? e.target : e.target.closest('.copyable');
        const text = copyableElement.getAttribute('data-value') || copyableElement.textContent;
        const label = copyableElement.getAttribute('data-label') || 'Text';
        
        copyToClipboard(text, label);
        
        // Visual feedback
        copyableElement.classList.add('copied');
        setTimeout(() => {
          copyableElement.classList.remove('copied');
        }, 1000);
        
        e.stopPropagation();
      }
    });
    
    // Auto-scroll to top when clicking disclaimer badge
    document.getElementById('disclaimerBadge').addEventListener('click', function(e) {
      e.stopPropagation();
      toggleDisclaimer();
    });
    
    // Close disclaimer when clicking outside
    document.addEventListener('click', function(e) {
      const popup = document.getElementById('disclaimerPopup');
      const badge = document.getElementById('disclaimerBadge');
      
      if (popup.classList.contains('show') && 
          !popup.contains(e.target) && 
          !badge.contains(e.target)) {
        popup.classList.remove('show');
      }
    });
    
    // Add keyboard support
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.getElementById('disclaimerPopup').classList.remove('show');
        document.getElementById('successToast').classList.remove('show');
      }
    });
    
    // Pause slider on hover
    document.getElementById('imageSlider').addEventListener('mouseenter', () => {
      clearInterval(slideInterval);
    });
    
    document.getElementById('imageSlider').addEventListener('mouseleave', () => {
      startSlider();
    });
  </script>
</body>
</html>